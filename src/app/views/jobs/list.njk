
{% extends "layout.njk" %}

{% block body %}

  <div class="container text-xs-center">
    <h1 class="m-y-3">{{ t("Who's Hiring?") }}</h1>
    <div class="card card-outline-secondary">
      <div class="card-block">
        <ul class="list-inline m-b-0 card-title text-muted">
          <li class="list-inline-item">{{ t('These exclusive jobs are from verified companies using CrocodileJS.') }}</li>
          <li class="list-inline-item"><a href="/jobs/create" class="btn btn-md btn-primary">{{ t('Post a Job') }}</a></li>
        </ul>
      </div>
    </div>
    <p>Item Count: {{ itemCount }}</p>
    <p>Posts: {{ posts | json }}</p>
    {% include "../_pagination.njk" %}
  </div>

{% endblock %}
